<UserControl x:Class="DroidManager.Windows.Views.Pages.FileTransferPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DroidManager.Windows.Views.Pages"
             xmlns:pagevm="clr-namespace:DroidManager.Windows.VM.Pages"
             mc:Ignorable="d"
             d:DesignHeight="480" d:DesignWidth="600">
    <UserControl.DataContext>
        <pagevm:FileTransferPageVM />
    </UserControl.DataContext>
    <Grid>
        <TextBlock x:Name="headerBlock" HorizontalAlignment="Left" Margin="40,40,0,0" TextWrapping="Wrap" Text="File Transfer" VerticalAlignment="Top" Height="37" Width="220" FontSize="22" FontWeight="Bold" />
        <TextBlock x:Name="subheaderInfoBlock" Margin="40,75,40,0" TextWrapping="Wrap" Text="The file transfer tool allows you to transfer any file from your device, including those not accessible from the explorer over USB." VerticalAlignment="Top" Height="41" FontSize="14"  />

        <!--Page content-->

    </Grid>
</UserControl>